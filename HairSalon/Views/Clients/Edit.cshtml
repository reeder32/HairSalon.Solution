@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

@using (Html.BeginForm(new { @class = "form-group" }))
{
  @Html.HiddenFor(model => model.ClientId)
  <div class="form-floating">
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
</div>
  <hr>
  @Html.LabelFor(model => model.Stylist, null, new {@style = "width: 100px"})
  @Html.DropDownList("StylistId", null, new {@class = "form-select-lg "})

  <input class="form-control btn-primary" type="submit" value="Save changes" />

}

<div class="btn-group d-flex justify-content-center bg-light" style="width: 100%">
  @Html.ActionLink("Delete", "Delete", new {id = Model.ClientId}, new {@class="text-danger", @style="margin-right:50%"})
  @Html.ActionLink("Cancel", "Index",new {@style="margin-left:50%"}, new {@class="text-warning"})
</div>
