@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients:</h1>

@if (@Model.Count == 0)
{
  <h3>No clients for this stylist!</h3>
}
@foreach (Client c in Model)
{
  <li>@Html.ActionLink($"{c.Name}", "Details", new {id = c.ClientId})</li>
}
<p>@Html.ActionLink("Add new client", "Create")</p>
