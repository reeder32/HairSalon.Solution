@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist

@using (Html.BeginForm(new { @class = "form-group" }))
{
  @Html.HiddenFor(model => model.StylistId)
  <div class="form-floating">
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
</div>
  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)
  <hr>
  <input class="form-control btn-primary" type="submit" value="Save changes" />

}
<div class="btn-group d-flex justify-content-center bg-light" style="width: 100%">
  @Html.ActionLink("Delete", "Delete",null, null, new {@class="text-danger"})
</div>
@await Html.PartialAsync("FormFooter")