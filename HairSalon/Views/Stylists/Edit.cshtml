@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist

@using (Html.BeginForm(new { @class = "form-group" }))
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)
  <input class="form-control btn-primary" type="submit" value="Save changes" />

}

@Html.ActionLink("Delete", "Delete", new {id = Model.StylistId})