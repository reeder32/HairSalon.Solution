@{
  Layout = "_Layout";
}
@using HairSalon.Models;

<h1>Details for @Model.Name</h1>

<h2>Specialty</h2>
<h3>@Model.Specialty</h3>

@if (Model.Clients.Count > 0)
{
  <h2>Clients:</h2>
  <ul>
@foreach (Client client in Model.Clients)
{
    <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new {id = client.ClientId})</li>
}
</ul>
}
else
{
<p>There are currently no clients for this stylists</p>
}
@Html.ActionLink("Add Client", "Create", "Clients", new {id = Model.StylistId})
<p>@Html.ActionLink("Edit", "Edit", new {id = Model.StylistId})</p>
